{
  "name": "bazarvoice",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "reload": "nest build && pm2 reload main",
    "stop": "pm2 stop main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:pm2": "nest build && pm2 start dist/src/main.js -i 2",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "ts-node node_modules/typeorm/cli.js  -f ormconfig",
    "migration:generate": "typeorm migration:generate -d src/migrations -n",
    "migration:create": "typeorm migration:create -d src/migrations -n",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@clickhouse/client": "^0.2.7",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^7.6.12",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "7.5.1",
    "@nestjs/mongoose": "^7.2.3",
    "@nestjs/platform-express": "7.5.1",
    "@nestjs/swagger": "^4.8.1",
    "@nestjs/typeorm": "7.1.5",
    "bull": "^4.11.3",
    "cache-manager": "^4.1.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "clickhouse": "^2.6.0",
    "dotenv": "8.2.0",
    "express": "^4.17.3",
    "moment": "^2.29.4",
    "mysql2": "^3.6.5",
    "nestjs-cls": "^1.6.2",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.5",
    "typeorm": "0.2.29",
    "typeorm-naming-strategies": "2.0.0",
    "underscore": "^1.8.3",
    "useragent": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bull": "^4.10.0",
    "@types/cache-manager": "^4.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
